<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>TurnControlServlet</servlet-name>
		<servlet-class>com.airfly.stepmotor.TurnControl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TurnControlServlet</servlet-name>
		<url-pattern>/turnControl</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ModeControlServlet</servlet-name>
		<servlet-class>com.airfly.stepmotor.ModeControl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ModeControlServlet</servlet-name>
		<url-pattern>/modeControl</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>SpeedControlServlet</servlet-name>
		<servlet-class>com.airfly.stepmotor.SpeedControl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SpeedControlServlet</servlet-name>
		<url-pattern>/SpeedControl</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>loginCheck</servlet-name>
		<servlet-class>com.airfly.login.LoginCheck</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>loginCheck</servlet-name>
		<url-pattern>/loginCheck</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>com.airfly.login.Logout</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>changePassword</servlet-name>
		<servlet-class>com.airfly.actions.ChangePassword</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>changePassword</servlet-name>
		<url-pattern>/changePassword.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>showUser</servlet-name>
		<servlet-class>com.airfly.actions.ShowUser</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>showUser</servlet-name>
		<url-pattern>/showUser.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>findUser</servlet-name>
		<servlet-class>com.airfly.actions.FindUser</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>findUser</servlet-name>
		<url-pattern>/findUser.do</url-pattern>
	</servlet-mapping>
        <servlet>
		<servlet-name>addUser</servlet-name>
		<servlet-class>com.airfly.actions.AddUser</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>addUser</servlet-name>
		<url-pattern>/addUser.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>modifyUser</servlet-name>
		<servlet-class>com.airfly.actions.ModifyUser</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>modifyUser</servlet-name>
		<url-pattern>/modifyUser.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>modifyUserDetail</servlet-name>
		<servlet-class>com.airfly.actions.ModifyUserDetail</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>modifyUserDetail</servlet-name>
		<url-pattern>/modifyUserDetail.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>deleteUser</servlet-name>
		<servlet-class>com.airfly.actions.DeleteUser</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deleteUser</servlet-name>
		<url-pattern>/deleteUser.do</url-pattern>
	</servlet-mapping>
      <listener>
          <listener-class>com.airfly.listener.SessionListener</listener-class>
      </listener>

      <filter>
		<filter-name>loginFilter</filter-name>
		<filter-class>
			com.airfly.login.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>loginFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>

</web-app>
